generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String @unique
  email String @unique
  password String
  projects Project[] 
  commits Commit[]
  totalProject Int
}

model Project {
  id Int @id @default(autoincrement())
  localId Int
  title String
  createAt DateTime @default(now())
  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  commit Commit[]
  @@unique([userId, localId])
  totalCommit Int
}

model Commit {
  id Int @id @default(autoincrement())
  localId Int
  message String
  createAt DateTime @default(now())
  projectLocalId Int
  userId Int
  project Project @relation(fields: [userId, projectLocalId], references: [userId, localId], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}